---
import BaseLayout from "@layouts/BaseLayout.astro";
import client from "@data/client.json";

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import landingImage from "@assets/images/landing/about-landing.png";
import { getImage } from "astro:assets";
import HeroForm from "@components/HeroForm.astro";
import ServiceCards from "@components/ServiceCards.astro";
const optimizedImage = await getImage({ src: landingImage, format: "avif" });
---

<BaseLayout
  title="Contact"
  description="Meta description for the page"
  ogImage={optimizedImage}
>
  <HeroForm
    title="Premium Epoxy Flooring in Edmonton"
    subtitle="Transform your concrete surfaces with professional-grade coatings built for beauty, protection, and performance."
    img={landingImage}
  />

  <ServiceCards class={"pt-section-padding"} />
</BaseLayout>
