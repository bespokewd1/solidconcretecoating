---
import { Icon } from "astro-icon/components";

interface Props {
  label: string;
}

const { label } = Astro.props;
---

<a
  href="/contact"
  class="cs-button-solid group w-fit gap-2 bg-amber-500 px-0 font-mont text-[0.9375rem] font-bold text-neutral-950 transition-colors duration-300 before:hidden"
>
  <span
    class="inline-flex -translate-x-px -translate-y-0.5 items-center bg-amber-300 px-7.5 duration-300 will-change-transform group-hover:-translate-y-1.5 group-hover:transition-transform group-active:-translate-y-0.5 group-active:duration-100"
  >
    {label}
    <Icon name={"tabler:chevron-right"} class={"size-5"} />
  </span>
</a>
