---
import cn from "@utils/cn";
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div"> & {
  iconName: string;
};

const { iconName, class: className, ...rest } = Astro.props;
---

<div class:list={cn("mb-4 flex items-center gap-3", className)} {...rest}>
  <div
    class="flex size-12 items-center justify-center rounded-full bg-accent/10"
  >
    <Icon name={iconName} class="size-6 text-accent" />
  </div>
  <span
    class="font-mont text-sm font-bold tracking-widest text-accent uppercase"
  >
    <slot />
  </span>
</div>
