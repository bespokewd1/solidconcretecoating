---
import { Icon } from "astro-icon/components";
import CTALink from "@components/CTALink.astro";
import { Image } from "astro-lqip/components";
import sealed from "@assets/images/coatings/sealed.png";
import sealed1 from "@assets/images/services/b4-after-coat.webp";
import sealed2 from "@assets/images/services/b4-after-com.webp";
import sealed3 from "@assets/images/services/b4-after-res.webp";

type ServiceCategory = {
  icon: string;
  title: string;
  description: string;
  image: ImageMetadata;
};

// beforeImage: ImageMetadata;
// afterImage: ImageMetadata;

const serviceCategories: ServiceCategory[] = [
  {
    icon: "tabler:droplet-half-2",
    title: "Concrete & Aggregate Sealant",
    description:
      "Professional-grade sealers that protect against moisture and wear.",
    image: sealed,
  },
  {
    icon: "tabler:road",
    title: "Driveways, Stairs & Walkways",
    description:
      "Complete sealing solutions for all exterior concrete surfaces.",
    image: sealed1,
  },
  {
    icon: "tabler:ruler-measure",
    title: "Leveling & Crack Repair",
    description: "Fix uneven surfaces and seal cracks before they spread.",
    image: sealed2,
  },
  {
    icon: "tabler:shield-check",
    title: "Protective Coatings",
    description:
      "Long-lasting protection against weather, salt, and chemicals.",
    image: sealed3,
  },
];
---

<section
  id="concrete-sealing-repair"
  class="scroll-mt-32 px-4 py-section-padding sm:px-8"
  data-content-active="1"
>
  <div class="mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="mb-12 max-w-3xl">
      <div
        class="mb-4 flex items-center gap-3"
        data-reveal
        data-direction="bottom"
        data-distance-y="30"
        data-once="true"
      >
        <div
          class="flex size-12 items-center justify-center rounded-full bg-accent/10"
        >
          <Icon name="tabler:tools" class="size-6 text-accent" />
        </div>
        <span
          class="font-mont text-sm font-bold tracking-widest text-accent uppercase"
        >
          Restoration
        </span>
      </div>

      <h2
        class="mb-6 font-mont text-3xl font-bold text-fore-dark sm:text-4xl"
        data-reveal
        data-direction="bottom"
        data-distance-y="30"
        data-delay-s="0.1"
        data-once="true"
      >
        Concrete Sealing & Repair
      </h2>

      <p
        class="font-mont text-lg leading-relaxed text-fore-dark/80"
        data-reveal
        data-direction="bottom"
        data-distance-y="30"
        data-delay-s="0.15"
        data-once="true"
      >
        Protect and restore your concrete surfaces with our sealing and repair
        services. Extend the life of your floors, patios, driveways, and
        walkways.
      </p>
    </div>

    <!-- Services Grid -->
    <div
      class="mb-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-4"
      data-stagger-child-b
      data-distance-y="40"
      data-delay-s="0.2"
      data-once="true"
    >
      {
        serviceCategories.map((service, idx) => (
          <button
            class="group rounded-sm border border-primary/20 bg-white p-6 transition-all duration-300 hover:border-primary hover:shadow-lg"
            data-tab={idx + 1}
          >
            <div class="mb-4 flex size-14 items-center justify-center rounded-full bg-primary/50 transition-colors duration-300 group-hover:bg-accent/20">
              <Icon
                name={service.icon}
                class="size-7 text-fore-light transition-colors duration-300 group-hover:text-accent"
              />
            </div>
            <h3 class="mb-2 font-mont text-lg font-bold text-fore-dark">
              {service.title}
            </h3>
            <p class="font-mont text-sm leading-relaxed text-fore-dark/80">
              {service.description}
            </p>
          </button>
        ))
      }
    </div>

    <!-- Before/After + Benefits -->
    <div
      id="restore-content-grid"
      class="grid items-center gap-12 lg:grid-cols-2"
    >
      <!-- Before/After Image -->

      <div
        class="relative grid place-content-center overflow-hidden pr-10 pb-10"
        data-reveal
        data-direction="left"
        data-distance-x="50"
        data-once="true"
      >
        {
          serviceCategories.map((item, idx) => (
            <div
              class="group relative [grid-area:1/1]"
              style="display: none;"
              data-content={idx + 1}
            >
              <div>
                <Image
                  src={item.image}
                  alt="Before and after concrete sealing comparison "
                  class="h-80 w-full object-contain sm:h-96"
                  lqip="base64"
                  lqipSize={10}
                />
              </div>

              <div class="absolute -right-4 -bottom-4 z-20 grid place-content-center items-center overflow-hidden sm:-right-8 sm:-bottom-14">
                <div class="inline-flex flex-col items-center justify-center rounded-sm bg-primary p-6 transition-all [grid-area:1/1] group-hover:translate-x-[150%] group-hover:opacity-0 group-hover:transition-opacity">
                  <Icon
                    name={item.icon}
                    class="mb-2 size-8 text-fore-light/90"
                  />
                  <p class="font-mont text-sm font-bold text-fore-light">
                    {item.title}
                  </p>
                </div>
                <div class="size-0 translate-x-full place-content-center overflow-hidden rounded-sm bg-primary p-0 transition-transform duration-200 ease-in [grid-area:1/1] group-hover:size-full group-hover:translate-x-0 group-hover:p-6">
                  <p class="font-mont text-sm font-bold text-fore-light">
                    {item.description}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Benefits -->
      <div
        data-reveal
        data-direction="right"
        data-distance-x="50"
        data-delay-s="0.15"
        data-once="true"
      >
        <h3 class="mb-6 font-mont text-2xl font-bold text-fore-dark">
          Why Seal Your Concrete?
        </h3>

        <div class="space-y-4">
          {
            [
              {
                icon: "tabler:droplet-off",
                title: "Prevents Cracks & Water Damage",
                description:
                  "Sealing creates a barrier against moisture penetration and freeze-thaw cycles.",
              },
              {
                icon: "tabler:clock-hour-4",
                title: "Enhances Durability",
                description:
                  "Extend the life of your concrete surfaces by years with proper sealing.",
              },
              {
                icon: "tabler:leaf",
                title: "Eco-Friendly & Low-Maintenance",
                description:
                  "Our sealers are environmentally safe and reduce cleaning frequency.",
              },
            ].map((benefit) => (
              <div class="flex gap-4 rounded-sm bg-fore-light p-4">
                <div class="flex size-12 shrink-0 items-center justify-center rounded-full bg-accent/20">
                  <Icon name={benefit.icon} class="size-6 text-accent" />
                </div>
                <div>
                  <h4 class="mb-1 font-mont font-bold text-fore-dark">
                    {benefit.title}
                  </h4>
                  <p class="font-mont text-sm text-fore-dark/80">
                    {benefit.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>

        <CTALink
          label="Schedule Inspection"
          variant="primary"
          showIcon={true}
          class="mt-8"
        />
        <!-- <a
          href="/contact"
          class:list={[
            "mt-8 inline-flex items-center gap-2 px-8 py-4 font-mont font-bold",
            "border-2 border-amber-300 bg-amber-300 text-neutral-900 transition-all duration-400",
            "hover:rounded-lg hover:border-neutral-900 hover:bg-neutral-900 hover:text-neutral-50",
          ]}
        >
          Schedule Inspection
          <Icon name="tabler:arrow-right" class="size-5" />
        </a> -->
      </div>
    </div>
  </div>
</section>

<script>
  import { switchTab } from "@js/switchTab";

  document.addEventListener("astro:page-load", () => {
    switchTab("concrete-sealing-repair", "#restore-content-grid");
  });
</script>
